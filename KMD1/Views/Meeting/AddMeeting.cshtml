@{
}

<h1>Add Meeting</h1>
<div class="row">
	<div class="col-md-4">
		<form asp-action="NewMeeting" id="modalForm">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="time" class="control-label"></label><br />
				@**@
				Duration: <input asp-for="time" type="time" min="08:00" max="16:00" required />

				<span asp-validation-for="time" class="text-danger"></span><br />
			</div>
			<div class="form-group">
				<label asp-for="name" class="control-label"></label><br />
				<input asp-for="name" class="form-control" />
				<span asp-validation-for="name" class="text-danger"></span><br />
			</div>

			<div class="form-group">
				<label asp-for="location" class="control-label"></label><br />
				<input asp-for="location" class="form-control" />
				<span asp-validation-for="location" class="text-danger"></span><br />
			</div>

			<div class="form-group">
				<input type="submit" value="Add Meeting" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>